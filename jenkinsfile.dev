
pipeline {
    agent any

    stages {

        stage('deploy') {

               steps {

                sh 'mvn deploy -Dmaven.wagon.http.ssl.insecure=true -Dmaven.wagon.http.ssl.allowall=true -Dmaven.wagon.http.ssl.ignore.validity.dates=true'
              }
            }
        }
    Post {
    success {
        slackSend channel: 'cicd-notifications',
                  color: 'good',
                  message: "The pipeline ${currentBuild.fullDisplayName} completed successfully."
    }
  }
}

